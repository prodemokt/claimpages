function FsmStatus() {
	this.status = '';

	this.startAction=function(){
		
		$('.loading-container').show();
    	$('body').css('overflow','hidden'); 
    	this.status= 'working';
		
	}
	this.endAction=function(){
		this.status= 'done';
		$('.loading-container').hide();
		$('body').css('overflow','auto');

		//modal backdrop will handle by the bootstarp so, we are hiding the modal backdrop in this js
		$('.modal-backdrop').hide();
	}
	this.isWorking = function(){
		return this.status=='working';
	}
}
var fsmStatus = new FsmStatus();

 